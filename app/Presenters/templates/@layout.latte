    <script src="https://cdn.jsdelivr.net/npm/simple-notify@0.5.5/dist/simple-notify.min.js"></script>
    <script>
        function pushNotify(message, type) {
            if (type === null || type === "")
                type = "info";

            new Notify({
                status: type,
                title: 'Uporoznění',
                text: message,
                effect: 'fade',
                speed: 300,
                customClass: '',
                customIcon: '',
                showIcon: true,
                showCloseButton: true,
                autoclose: true,
                autotimeout: 3000,
                gap: 20,
                distance: 20,
                type: 1,
                position: 'left bottom'
            })
        }
    </script>
